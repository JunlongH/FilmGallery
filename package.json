{
  "name": "film-gallery-desktop",
  "version": "1.9.1",
  "private": true,
  "description": "Film Gallery â€” Electron desktop wrapper for the Film Manager app",
  "main": "electron-main.js",
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "postinstall": "cd client && npm install && cd ../server && npm install",
    "dev:client": "cd client && cross-env PORT=3000 REACT_APP_API_BASE=http://127.0.0.1:4000 npm start",
    "dev:server": "cd server && npm start",
    "dev:electron": "cross-env ELECTRON_DEV=true electron .",
    "dev:web": "concurrently -k -n SERVER,CLIENT \"npm:dev:server\" \"npm:dev:client\"",
    "dev:full": "concurrently -k -n SERVER,CLIENT,ELECTRON \"npm:dev:server\" \"npm:dev:client\" \"wait-on http://localhost:3000 && npm run dev:electron\"",
    "dev": "concurrently -k -n CLIENT,ELECTRON \"npm:dev:client\" \"wait-on http://localhost:3000 && npm run dev:electron\"",
    "build-client": "cd client && npm run build",
    "build": "npm run build-client",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "start": "electron ."
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "26.6.10",
    "electron-builder": "^24.6.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.yourorg.filmgallery",
    "productName": "FilmGallery",
    "files": [
      "client/build/**/*",
      "electron-main.js",
      "electron-preload.js",
      "electron-gpu/**/*",
      "assets/**/*",
      "package.json",
      "!**/film.db",
      "!**/uploads/**",
      "!**/.git/**",
      "!**/node_modules/**/test/**"
    ],
    "npmRebuild": false,
    "extraResources": [
      {
        "from": "server",
        "to": "server",
        "filter": [
          "**/*",
          "!**/film.db",
          "!**/uploads/**"
        ]
      },
      {
        "from": "packages",
        "to": "packages",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asar": true,
    "directories": {
      "buildResources": "assets",
      "output": "dist_v9"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
